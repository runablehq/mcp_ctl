{
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "nodenext",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "outDir": "dist",
      "baseUrl": ".",
      "resolveJsonModule": true,
      "allowJs": true,
      "declaration": true,
      "declarationMap": true,
      "noEmit": false
    },
    "include": ["src", "db", "drizzle"],
    "exclude": ["node_modules", "dist"]
  }
  